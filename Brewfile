cask 'figma'
cask 'httpie'
cask 'hyper'
cask 'microsoft-edge'
cask 'notion'
cask 'raycast'
cask 'slack'
cask 'spotify'
cask 'tableplus'
cask 'visual-studio-code'

# Fonts
cask 'font-cascadia-code'
