cask 'notion'
cask 'slack'
cask 'spotify'
cask 'visual-studio-code'
cask 'microsoft-edge'
cask 'hyper'
cask 'figma'
cask 'tableplus'
cask 'rectangle'

# Fonts
cask 'font-cascadia-code'

