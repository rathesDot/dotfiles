# Taps
tap 'homebrew/bundle'

# Install ZSH
brew 'zsh'
brew 'zsh-completions'

# Install GNU core utilities (those that come with macOS are outdated)
brew 'coreutils'

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew 'findutils'

# Install Bash
brew 'bash'

# Install more recent versions of some macOS tools
brew 'grep'

# Install Binaries
brew 'git'
brew 'node'
brew 'watchman'
brew 'wget'
brew 'pure'
brew 'mas'
brew 'mackup'
brew 'nvm'
brew 'svn'

brew 'python'
brew 'pipenv'
brew 'flake8'
brew 'yapf'

