cask 'firefox'
cask 'google-chrome'
cask 'insomnia'
cask 'iterm2'
cask 'phpstorm'
cask 'sequel-pro'
cask 'slack'
cask 'spotify'
cask 'visual-studio-code'
cask 'microsoft-edge'

# Fonts
cask 'font-source-code-pro-for-powerline'
cask 'font-source-code-pro'
cask 'font-cascadia'

# Install Mac App Store apps
mas 'Bear', id: 1091189122
mas 'Spark', id: 1176895641
